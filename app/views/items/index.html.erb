<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="text-center">Your Ideas</h1><br/>
      <% if user_signed_in? %>
        <% @items.each do |item| %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%= link_to item.title, item %></h3>
            </div>
            <div class="panel-body">
              <%= item.description %>
            </div>
          </div>
        <% end %>
      <% end %>
      <br/>
      <%= link_to "New Item", new_item_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>