<div class="container">
  <div class="row">
    <h1 class="text-center">Your Ideas</h1><br/>
    <% if user_signed_in? %>
      <% @items.each do |item| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              <div class="textbox">
                <p class="alignleft truncate"><%= link_to item.title, item %></p>
                <p class="alignright">
                  <%= link_to edit_item_path(item) do %>
                    <i class="fa fa-lg fa-pencil"></i>
                  <% end %> &nbsp;
                  <%= link_to item, method: :delete, data: { confirm: "Areyou sure?" } do %>
                    <i class="fa fa-lg fa-trash"></i>
                  <% end %>
                </p>
              </div>
              <div style="clear: both;"></div>
            </h3>
          </div>
          <div class="panel-body">
            <%= item.description %>
          </div>
        </div>
      <br/>
      <% end %>
    <% end %>
  </div>
  <%= link_to "New Item", new_item_path, class: "btn btn-primary" %>
</div>