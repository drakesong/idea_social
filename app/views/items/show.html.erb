<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2><%= @item.title %></h2>
      <p><%= @item.description %></p>
      
      <%= link_to "Back", items_path, class: "btn btn-default" %>
      <%= link_to "Edit", edit_item_path(@item), class: "btn btn-info" %>
      <%= link_to "Delete", item_path(@item), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>